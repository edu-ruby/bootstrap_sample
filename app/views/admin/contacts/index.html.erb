<!-- レイアウトにタイトルを渡すために追加 -->
<% provide(:title, 'Listing admin_contacts') %>

<!-- レスポンシブ対応のために div を追加 -->
<div class="table-responsive">
  <!-- テーブルにクラスを追加 -->
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @admin_contacts.each do |admin_contact| %>
        <tr>
          <td><%= admin_contact.name %></td>
          <td><%= admin_contact.email %></td>
          <td><%= link_to 'Show', admin_contact %></td>
          <td><%= link_to 'Edit', edit_admin_contact_path(admin_contact) %></td>
          <!-- 削除ボタンにクラスを追加 -->
          <td><%= link_to 'Destroy', admin_contact, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<!-- ユーザー追加ボタンにクラスを追加 -->
<p><%= link_to 'New Contact', new_admin_contact_path, class: 'btn btn-primary' %></p>
